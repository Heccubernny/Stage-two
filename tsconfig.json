{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "moduleResolution": "node10",
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@hng/*": [
                "src/*"
            ]
        },
        "types": [
            "jest",
            "node"
        ],
    },
    "include": [
        "src/**/*",
        "app.ts",
        "index.ts",
    ],
    "exclude": [
        "node_modules"
    ],
}